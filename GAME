    Dado = [1, 2, 3, 4, 5, 6]
    jogadorDado = random.choice(Dado)
    inimigo = random.choice(Dado)
    print("üé≤jogando dadosüé≤")
    pontostres()
    sleep(2)
    print(f"voce conseguiu o numero {jogadorDado} e seu inimigo {inimigo}")
    if jogadorDado == inimigo:
      print('\033[36mEMPATOU!: empates n√£o d√£o pontos\033[m')
      sleep(1)
    if jogadorDado > inimigo:
      print("\033[32mGanhou!!!\033[m")
      contPontos += 1
      print(f"\033[32mvoc√™ possui {contPontos} pontos\033[m")
      perguntaDado = int(input("deseja AVAN√áAR?\n\033[32m1-SIM\033[m, \033[31m2-N√É0\033[m\n"))
      if perguntaDado == 1:
        print("contianuando....")
        sleep(1)
      if perguntaDado == 2:
        restart_program()
      if perguntaDado >= 3 or perguntaDado == 0:
        print("digite um numero \033[32mVALIDO\033[m BURRO")
        sleep(2)
    if contPontos == 3:
      print('\033[32mparabens jogador voce venceu os dados\033[m\n'
            ' \033[32mVAMOS PARA A PROXIMA ETAPA!!!\033[m')
      pontostres()
      sleep(2)
      win = True
      return win
      break
