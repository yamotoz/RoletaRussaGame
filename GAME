        print("\033[32mObrigado por jogar um dos nossos jogos, sua sorte √© fantastica\033[m")
        break
#--------------------------------------------PROGRAMA PRINCIPAL---------------------------------
bemvindo = BemVindo()
while True:
  lobby()

  try:

    jogador = int(
        input("\033[31:1mdigite o modo que deseja jogar MORTAL:\033[m"))

    if jogador == 0:
      print("\033[31:1mseu FRACO\033[m")
      break
    if jogador >= 5:
      print("\033[31mescreve um numero certo seu BAITINGA\033[m")
      sleep(2)
#==-==-==-==-==-==-==-==-==-==-# MODO DE JOGO DEMONIACO=-==-==-=-==-==-==-==-==-==-==-=-
    if jogador == 3:
      demon = Demoniaco()
      per = int(
          input("quer jogar novamente?\n"
                "\033[32m1-SIM\n"
                "\033[31m2-N√ÇO\n\033[m"))
      if per == 1:
        print(f"reiniciando...")
        sleep(1)
        restart_program()
      if per == 2:
        break
#=-==-==-==-==-==-==-==-==-==-==-=# MODO DE JOGO PERTUBADOR=-==-==-==-==-=-==-==-==-==-
    if jogador == 2:
      pertubador = Pertubador()
      per2 = int(
          input("quer jogar novamente?\n"
                "\033[32m1-SIM\n"
                "\033[31m2-N√ÇO\n\033[m"))
      if per2 == 1:
        print(f"reiniciando...")
        sleep(1)
        restart_program()
      if per2 == 2:
        break
#=-==-==-==-==-==-==-==--==-==-==-=# MODO DE JOGO FOGUINHO=-==-==-==-==-=-==-===-==-==-=
    if jogador == 1:
      fogo = Foguinho()
      per3 = int(
          input("quer jogar novamente?\n"
                "\033[32m1-SIM\n"
                "\033[31m2-N√ÇO\n\033[m"))
      if per3 == 1:
        print(f"reiniciando...")
        sleep(1)
        restart_program()
      if per3 == 2:
        break
#=-==-==-==-==-==-==-==-==-==-===-=# MODO DE JOGO SECRETO=-==-==-==-==-=-==-=====-==-=-=
    if jogador == 4:
      pontos()
      print('\033[32mPARABENS MORTAL, VOC√ä ACHOU O MODO secreto QUER JOGAR?\033[m\n'
          '\033[32m1-SIM\n'
          '\033[31m2-N√ÉO\033[m')
      resposta = int(input("digite sua resposta:"))
      if resposta <= 0 or resposta >= 3:
        print('\033[31minsira uma op√ß√£o valida seu animal!!\033[m')
      if resposta == 1:
        print('‚ò†Ô∏è ‚ò†Ô∏èPREPARE-SE‚ò†Ô∏è ‚ò†Ô∏è')
        Dados()
        cartas()
        jogoFrutas()
      if resposta == 2:
        break
#=-==-==-==-==-==-==-===-==-==-==-final do tratamento de erro=-==-===-=-==-==-==-==-=-=
  except (ValueError, TypeError, KeyboardInterrupt):
    error = erroType()
    try:
      print("Tu √© BURRO por acaso? √à pra dizer o modo do jogo 1, 2 ou 3 ")
      sleep(4)
